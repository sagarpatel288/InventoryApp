<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomTextView">
        <!--Replace fonts by better font family-->
        <attr name="typeface" format="enum">
            <enum name="regular" value="1"/>
            <enum name="regular_italic" value="2"/>
            <enum name="light" value="3"/>
            <enum name="light_italic" value="4"/>
            <enum name="bold" value="5"/>
            <enum name="bold_italic" value="6"/>
            <enum name="bold_heavy" value="7"/>
        </attr>
        <attr name="btnTxtColor" format="color"/>
        <attr name="btnTxtPressedColor" format="color"/>
        <attr name="btnRippleColor" format="color"/>
        <attr name="btnHasAlphaPressedColor" format="boolean"/>
        <attr name="btnGradientCornerRadius" format="float"/>
        <attr name="btnGradientOrientation" format="enum"/>
        <attr name="btnGradientStartColor" format="color"/>
        <attr name="btnGradientCenterColor" format="color"/>
        <attr name="btnGradientEndColor" format="color"/>
        <attr name="btnCornerRadius" format="float"/>
        <attr name="btnRightBottomRadius" format="float"/>
        <attr name="btnLeftBottomRadius" format="float"/>
        <attr name="btnLeftTopRadius" format="float"/>
        <attr name="btnRightTopRadius" format="float"/>
        <attr name="btnHasGradientCustomization" format="boolean"/>
        <attr name="charSpacing" format="float"/>
    </declare-styleable>
</resources>